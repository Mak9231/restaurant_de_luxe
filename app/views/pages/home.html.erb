







<!-- Bandeau visuel -->
<div class="relative h-96 bg-cover bg-center" style="background-image: url('/assets/ambiance3.png');">
  <div class="absolute inset-0 bg-black bg-opacity-30"></div>

  <div class="relative z-10 flex items-start justify-between p-6 text-white">
    <button class="text-white border p-2">☰ Menu</button>
    <div class="text-right">
      <p>📞 03 28 64 21 80</p>
      <div class="flex justify-end space-x-2">
        <img src="/assets/fr_flag.png" class="w-5 h-5" />
        <img src="/assets/en_flag.png" class="w-5 h-5" />
      </div>
    </div>
  </div>

  <!-- Logo au centre -->
  <div class="absolute bottom-6 left-1/2 transform -translate-x-1/2">
    <%= image_tag "", class: "h-20" %>
  </div>

</div>

<!-- Contenu principal -->
<section class="px-6 py-12 bg-white text-center">
  <nav class="text-sm text-gray-500 mb-4">
    <Accueil > <span class="text-green-600">Réserver une table</span>
  </nav>
  <h1 class="text-4xl font-light mb-2">Réserver une table</h1>
  <p class="text-gray-600 mb-6">Fermé le dimanche soir ainsi que le lundi et mercredi toute la journée.</p>

  <!-- Formulaire -->
  <div class="max-w-md mx-auto bg-orange-500 text-white p-6 rounded-lg shadow-lg">
    <%= form_with model: @reservation, url: reservations_path, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :nombre_de_couverts, "Nombre de couverts", class: "block mb-1" %>
        <%= f.number_field :nombre_de_couverts, class: "w-full p-2 text-black rounded" %>
      </div>

      <div>
        <%= f.label :date, "Date", class: "block mb-1" %>
        <%= f.date_field :date, class: "w-full p-2 text-black rounded" %>
      </div>

      <%= f.submit "Réserver", class: "w-full bg-white text-orange-500 font-bold py-2 rounded" %>
    <% end %>
  </div>
</section>
