<section class="px-6 md:px-16 py-20">
  <h2 class="text-4xl font-serif mb-10 text-center">Toutes les Réservations</h2>

  <table class="w-full border-collapse bg-white rounded-lg shadow-md overflow-hidden">
    <thead class="bg-gray-100 text-left">
      <tr>
        <th class="p-4 border-b">Nom</th>
        <th class="p-4 border-b">Email</th>
        <th class="p-4 border-b">Date</th>
        <th class="p-4 border-b">Heure</th>
        <th class="p-4 border-b">Personnes</th>
        <th class="p-4 border-b">Créée le</th>
      </tr>
    </thead>
    <tbody>
      <% @reservations.each do |reservation| %>
        <tr class="hover:bg-gray-50">
          <td class="p-4 border-b"><%= reservation.name %></td>
          <td class="p-4 border-b"><%= reservation.email %></td>
          <td class="p-4 border-b"><%= reservation.date %></td>
          <td class="p-4 border-b"><%= reservation.time.strftime("%H:%M") %></td>
          <td class="p-4 border-b"><%= reservation.guests %></td>
          <td class="p-4 border-b"><%= l(reservation.created_at, format: :short) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
